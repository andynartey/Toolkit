//--------------------------------------------------------------
// Images
//
// This file is automatically generated
// It is passed the dimensions of a set of png images
// These pngs should always have SVG conterparts available
//--------------------------------------------------------------

[class*='mooimage-'] {
  display: inline-block;
  background-repeat: no-repeat;
  background-size: contain;
}

{{#items}}
@mooimage-url-{{name}}: replace(replace('{{{escaped_image}}}', '.png', '.svg'), 'dist/images/', '');
{{/items}}

{{#items}}
@mooimage-width-{{name}}: {{px.width}};
{{/items}}

{{#items}}
@mooimage-height-{{name}}: {{px.height}};
{{/items}}

{{#items}}
.mooimage-background-{{name}}() {
  .svg-background(@mooimage-url-{{name}});
}

{{/items}}

{{#items}}
.mooimage-{{name}} {
  .mooimage-background-{{name}}();

  width: @mooimage-width-{{name}};
  height: @mooimage-height-{{name}}
}

{{/items}}
